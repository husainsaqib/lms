
@{
    ViewBag.Title = "ContactForm";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<head>
    <title>Contact Form</title>
    <style>
        body{
            font-family:Arial, sans-serif;
            background:linear-gradient(to right,#f0f4f8,#d9e2ec);
            display:flex;
            justify-content:center;
            align-items:center;
          
            margin:auto;
        }
        .form-container{
            background-color:white;
            padding:30px;
            border-radius:8px;
            box-shadow:0px 4px 20px rgba(0,0,0,0.1);
            width:400px;
            transition:transform 0.3s;
        }
        .form-container:hover{
            transform:translateY(-5px);
        }
        label{
            display:block;
            margin-bottom:5px;
            font-weight:bold;
            color:#333;
        }
        input[type="text"],
        input[type="email"],
        input[type="number"],
        .txt_desc{
            width:100%;
            padding:12px;
            margin-bottom:15px;
            border:2px solid #ccc;
            border-radius:5px;
            transition:border-color 0.3s;
        }
        input:focus,
        .txt_desc:focus{
            border-color:#4CAF50;
            outline:none;
        }
        .txt_desc{
            resize:vertical;

        }
        .btn_class {
            background-color: #4CAF50;
            color:white;
            padding:12px;
            border:none;
            border-radius:5px;
            cursor:pointer;
            font-size:16px;
            width:100%;
            transition:background-color 0.3s;
        }
        .btn_class:hover{
            background-color:#45a049;
        }
    </style>
</head>
<body>
<div class="form-container">
    <form method="post" action="/home/savecontact">
        <label for="name">Name</label>
        <input type="text" id="name" class="txt_title" placeholder="Enter your name" name="txt_name" required />
        <label for="email">Email</label>
        <input type="email" id="email" class="add_email" placeholder="Enter your email" name="txt_email" required />
        <label for="mobile_no">Mobile No:</label>
        <input type="number" id="mobile_no" class="txt_num" placeholder="Enter your mobile number" name="num_mobile" required />
        <label for="name">Subject</label>
        <input type="text" id="subject" class="txt_title" placeholder="Enter subject" name="txt_topic" required />
        <label for="message">Message</label>
        <textarea id="message" class="txt_desc" rows="4" placeholder="Enter your message" name="txt_message" required>
        
</textarea>
        <button type="button" class="btn_class">Submit</button>
    </form>
</div>
</body>


